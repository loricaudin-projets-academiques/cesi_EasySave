<Window x:Class="EasySave.GUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="EasySave" Height="600" Width="950"
    Background="{StaticResource MainBackgroundBrush}"
    Name="MainWindowRoot">

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="White" CornerRadius="8" Margin="20,20,20,10" Padding="20">
            <DockPanel>
                <TextBlock Text="EasySave" FontSize="28" FontWeight="Bold" Foreground="#2C3E50"/>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                    <Button Content="{Binding BackupsNavText}" Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,10,0" Command="{Binding NavigateBackupsCommand}"/>
                    <Button Content="{Binding SettingsNavText}" Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,10,0" Command="{Binding NavigateSettingsCommand}"/>
                    <Button Content="{Binding AboutNavText}" Style="{StaticResource SecondaryButtonStyle}" Command="{Binding NavigateAboutCommand}"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Page Content (ViewModel-bound via DataTemplates in App.xaml) -->
        <ContentControl Grid.Row="1" Margin="20,0,20,20" Content="{Binding CurrentPage}"/>
    </Grid>
</Window>