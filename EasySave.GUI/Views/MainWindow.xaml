<Window x:Class="EasySave.GUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="EasySave" Height="650" Width="1050"
    MinHeight="500" MinWidth="800"
    Background="{StaticResource MainBackgroundBrush}"
    WindowStartupLocation="CenterScreen"
    Name="MainWindowRoot">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ============ SIDEBAR ============ -->
        <Border Grid.Column="0" Background="{StaticResource SidebarBgBrush}" CornerRadius="0">
            <DockPanel>
                <!-- Logo / Brand -->
                <StackPanel DockPanel.Dock="Top" Margin="24,28,24,32">
                    <StackPanel Orientation="Horizontal">
                        <Border Width="36" Height="36" CornerRadius="10" Background="{StaticResource AccentBrush}" Margin="0,0,12,0">
                            <TextBlock Text="&#xE895;" FontFamily="Segoe MDL2 Assets" FontSize="18" 
                                       Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="EasySave" FontSize="18" FontWeight="Bold" Foreground="White" FontFamily="{StaticResource AppFont}"/>
                            <TextBlock Text="ProSoft" FontSize="10" Foreground="{StaticResource SidebarTextBrush}" FontFamily="{StaticResource AppFont}" Margin="0,-1,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <!-- Navigation -->
                <StackPanel DockPanel.Dock="Top">
                    <TextBlock Text="MENU" FontSize="10" FontWeight="SemiBold" Foreground="{StaticResource SidebarTextBrush}" 
                               Margin="24,0,0,8" FontFamily="{StaticResource AppFont}"/>

                    <Button Style="{StaticResource NavButtonStyle}" Command="{Binding NavigateBackupsCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE8F1;" FontFamily="Segoe MDL2 Assets" FontSize="16" VerticalAlignment="Center" Margin="0,0,12,0"/>
                            <TextBlock Text="{Binding BackupsNavText}" VerticalAlignment="Center" FontSize="13"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource NavButtonStyle}" Command="{Binding NavigateSettingsCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE713;" FontFamily="Segoe MDL2 Assets" FontSize="16" VerticalAlignment="Center" Margin="0,0,12,0"/>
                            <TextBlock Text="{Binding SettingsNavText}" VerticalAlignment="Center" FontSize="13"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource NavButtonStyle}" Command="{Binding NavigateAboutCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE946;" FontFamily="Segoe MDL2 Assets" FontSize="16" VerticalAlignment="Center" Margin="0,0,12,0"/>
                            <TextBlock Text="{Binding AboutNavText}" VerticalAlignment="Center" FontSize="13"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Bottom spacer + version -->
                <StackPanel DockPanel.Dock="Bottom" VerticalAlignment="Bottom" Margin="24,0,24,20">
                    <Border Height="1" Background="{StaticResource SidebarHoverBrush}" Margin="0,0,0,16"/>
                    <TextBlock Text="v2.0.0" FontSize="11" Foreground="{StaticResource SidebarTextBrush}" FontFamily="{StaticResource AppFont}"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- ============ MAIN CONTENT ============ -->
        <ContentControl Grid.Column="1" Margin="28,24,28,24" Content="{Binding CurrentPage}"/>
    </Grid>
</Window>