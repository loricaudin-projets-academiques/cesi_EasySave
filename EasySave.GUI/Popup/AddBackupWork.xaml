<Window x:Class="EasySave.GUI.Popup.AddBackupWork"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ajouter un travail de sauvegarde"
        Height="750" 
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Border Padding="20" Background="White" Margin="15" CornerRadius="12">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.15"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" 
                       Text="Nouveau travail de sauvegarde"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="#2C3E50"
                       Margin="0,0,0,20"/>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,0,15">
                <StackPanel Margin="5,0,15,0">

                    <StackPanel Margin="0,0,0,18">
                        <TextBlock Text="Nom du backup" FontWeight="SemiBold" Foreground="#34495E" Margin="0,0,0,8"/>
                        <Border BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="4">
                            <TextBox x:Name="txtName" BorderThickness="0" Padding="10" FontSize="14" Height="40" VerticalContentAlignment="Center"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,18">
                        <TextBlock Text="Dossier source" FontWeight="SemiBold" Foreground="#34495E" Margin="0,0,0,8"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="4,0,0,4">
                                <TextBox x:Name="txtSourcePath" BorderThickness="0" Padding="10" FontSize="14" Height="40" VerticalContentAlignment="Center"/>
                            </Border>
                            <Button Grid.Column="1" Content="📁 Parcourir" Width="110" Background="#3498DB" Foreground="White" FontWeight="SemiBold" Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="0,4,4,0">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#2980B9"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,18">
                        <TextBlock Text="Dossier destination" FontWeight="SemiBold" Foreground="#34495E" Margin="0,0,0,8"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="4,0,0,4">
                                <TextBox x:Name="txtDestPath" BorderThickness="0" Padding="10" FontSize="14" Height="40" VerticalContentAlignment="Center"/>
                            </Border>
                            <Button Grid.Column="1" Content="📁 Parcourir" Width="110" Background="#3498DB" Foreground="White" FontWeight="SemiBold" Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="0,4,4,0">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#2980B9"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,18">
                        <TextBlock Text="Type de sauvegarde" FontWeight="SemiBold" Foreground="#34495E" Margin="0,0,0,8"/>
                        <Border BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="4">
                            <ComboBox x:Name="cmbBackupType" BorderThickness="0" Padding="10" FontSize="14" Height="40" VerticalContentAlignment="Center">
                                <ComboBoxItem Content="🔵 Sauvegarde complète" IsSelected="True"/>
                                <ComboBoxItem Content="🔄 Sauvegarde différentielle"/>
                            </ComboBox>
                        </Border>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,18">
                        <TextBlock Text="Extension à chiffrer (CryptoSoft)" FontWeight="SemiBold" Foreground="#34495E" Margin="0,0,0,8"/>
                        <Border BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="4">
                            <ComboBox x:Name="cmbEncryptedExtensions" BorderThickness="0" Padding="10" FontSize="14" Height="40" VerticalContentAlignment="Center">
                                <ComboBoxItem Content="Aucune (Pas de chiffrement)" IsSelected="True"/>
                                <ComboBoxItem Content=".exe"/>
                                <ComboBoxItem Content=".msi"/>
                                <ComboBoxItem Content=".dll"/>
                                <ComboBoxItem Content=".pdf"/>
                                <ComboBoxItem Content=".txt"/>
                            </ComboBox>
                        </Border>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,18">
                        <TextBlock Text="Logiciel métier à surveiller (Pause si ouvert)" FontWeight="SemiBold" Foreground="#34495E" Margin="0,0,0,8"/>
                        <Border BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="4">
                            <ComboBox x:Name="cmbBlockedSoftware" BorderThickness="0" Padding="10" FontSize="14" Height="40" VerticalContentAlignment="Center">
                                <ComboBoxItem Content="Aucun" IsSelected="True"/>
                                <ComboBoxItem Content="Calculatrice (Calculator.exe)"/>
                                <ComboBoxItem Content="Visual Studio (devenv.exe)"/>
                                <ComboBoxItem Content="Microsoft Word (winword.exe)"/>
                            </ComboBox>
                        </Border>
                    </StackPanel>

                </StackPanel>
            </ScrollViewer>

            <Grid Grid.Row="2" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="1" x:Name="btnAdd" Content="✓ Ajouter" Width="130" Height="45" Margin="0,0,10,0" FontSize="14" FontWeight="Bold" Foreground="White" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#27AE60"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#229954"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Grid.Column="2" x:Name="btnCancel" Content="✕ Annuler" Width="130" Height="45" FontSize="14" FontWeight="SemiBold" Foreground="#7F8C8D" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#ECF0F1"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#BDC3C7"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>