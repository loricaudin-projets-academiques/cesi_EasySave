<Window x:Class="EasySave.GUI.Popup.DeleteConfirmPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirmer la suppression"
        Height="603" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Border Padding="30" Background="White" Margin="10" CornerRadius="8">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Icône d'avertissement + Titre -->
            <StackPanel Grid.Row="0" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        Margin="0,0,0,20">
                <Ellipse Width="60" 
                         Height="60" 
                         Fill="#FADBD8"
                         Margin="0,0,15,0">
                    <Ellipse.Effect>
                        <DropShadowEffect BlurRadius="5" ShadowDepth="1" Opacity="0.3" Color="#E74C3C"/>
                    </Ellipse.Effect>
                </Ellipse>

                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="⚠️" 
                               FontSize="45"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </StackPanel>

            <!-- Titre principal -->
            <TextBlock Grid.Row="1"
                       Text="Voulez-vous vraiment supprimer ce backup ?"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#2C3E50"
                       TextAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Informations du backup -->
            <Border Grid.Row="2"
                    Background="#FEF5E7"
                    BorderBrush="#F39C12"
                    BorderThickness="2"
                    CornerRadius="6"
                    Padding="20"
                    Margin="0,0,0,20">
                <StackPanel>
                    <!-- Nom du backup -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="📋 Nom:" 
                                   FontWeight="Bold"
                                   Foreground="#7F8C8D"
                                   Width="120"/>
                        <TextBlock x:Name="txtBackupName"
                                   FontWeight="Bold"
                                   Foreground="#2C3E50"
                                   TextWrapping="Wrap"/>
                    </StackPanel>

                    <!-- Source -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="📂 Source:" 
                                   FontWeight="Bold"
                                   Foreground="#7F8C8D"
                                   Width="120"/>
                        <TextBlock x:Name="txtBackupSource"
                                   Foreground="#34495E"
                                   TextWrapping="Wrap"/>
                    </StackPanel>

                    <!-- Destination -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="📁 Destination:" 
                                   FontWeight="Bold"
                                   Foreground="#7F8C8D"
                                   Width="120"/>
                        <TextBlock x:Name="txtBackupDest"
                                   Foreground="#34495E"
                                   TextWrapping="Wrap"/>
                    </StackPanel>

                    <!-- Type -->
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🔄 Type:" 
                                   FontWeight="Bold"
                                   Foreground="#7F8C8D"
                                   Width="120"/>
                        <TextBlock x:Name="txtBackupType"
                                   Foreground="#34495E"/>
                    </StackPanel>

                    <!-- Message d'avertissement -->
                    <Border Background="#E74C3C"
                            CornerRadius="4"
                            Padding="10"
                            Margin="0,15,0,0">
                        <TextBlock Text="⚠️ Cette action est IRRÉVERSIBLE"
                                   FontSize="13"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   TextAlignment="Center"/>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Boutons -->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Bouton Annuler (à gauche pour éviter suppression accidentelle) -->
                <Button Grid.Column="1"
                        Content="↩️ Non, annuler" 
                        Width="150" 
                        Height="45"
                        Margin="0,0,10,0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="#34495E"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#ECF0F1"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="4">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#BDC3C7"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Bouton Supprimer (à droite, en rouge) -->
                <Button Grid.Column="2"
                        Content="🗑️ Oui, supprimer" 
                        Width="150" 
                        Height="45"
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#E74C3C"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="4">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#C0392B"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#A93226"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>