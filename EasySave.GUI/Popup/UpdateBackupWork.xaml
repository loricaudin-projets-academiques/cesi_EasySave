<Window x:Class="EasySave.GUI.Popup.UpdateBackupWork"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Modifier un travail de sauvegarde"
        Height="494" 
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Border Padding="30" Background="White" Margin="10" CornerRadius="8">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- En-tête -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="Modifier le travail de sauvegarde"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#2C3E50"/>
                <TextBlock x:Name="txtCurrentName"
                           Text="Backup actuel: [Nom]"
                           FontSize="12"
                           Foreground="#7F8C8D"
                           Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Nom du backup -->
            <StackPanel Grid.Row="1" Margin="0,0,0,20">
                <TextBlock Text="Nom du backup" 
                           FontWeight="SemiBold" 
                           Foreground="#34495E"
                           Margin="0,0,0,8"/>
                <Border BorderBrush="#BDC3C7" 
                        BorderThickness="1" 
                        CornerRadius="4"
                        Background="White">
                    <TextBox x:Name="txtName" 
                             BorderThickness="0"
                             Padding="10"
                             FontSize="14"
                             VerticalContentAlignment="Center"
                             Height="40"/>
                </Border>
            </StackPanel>

            <!-- Chemin source -->
            <StackPanel Grid.Row="2" Margin="0,0,0,20">
                <TextBlock Text="Dossier source" 
                           FontWeight="SemiBold" 
                           Foreground="#34495E"
                           Margin="0,0,0,8"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" 
                            BorderBrush="#BDC3C7" 
                            BorderThickness="1" 
                            CornerRadius="4,0,0,4"
                            Background="White">
                        <TextBox x:Name="txtSourcePath"
                                 BorderThickness="0"
                                 Padding="10"
                                 FontSize="14"
                                 VerticalContentAlignment="Center"
                                 Height="40"/>
                    </Border>

                    <Button Grid.Column="1" 
                            Content="📁 Parcourir" 
                            Width="120" 
                            Height="40"
                            Background="#3498DB"
                            Foreground="White"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#3498DB"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="0,4,4,0"
                                                    Padding="15,0">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#2980B9"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </StackPanel>

            <!-- Chemin destination -->
            <StackPanel Grid.Row="3" Margin="0,0,0,20">
                <TextBlock Text="Dossier destination" 
                           FontWeight="SemiBold" 
                           Foreground="#34495E"
                           Margin="0,0,0,8"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" 
                            BorderBrush="#BDC3C7" 
                            BorderThickness="1" 
                            CornerRadius="4,0,0,4"
                            Background="White">
                        <TextBox x:Name="txtDestPath"
                                 BorderThickness="0"
                                 Padding="10"
                                 FontSize="14"
                                 VerticalContentAlignment="Center"
                                 Height="40"/>
                    </Border>

                    <Button Grid.Column="1" 
                            Content="📁 Parcourir" 
                            Width="120" 
                            Height="40"
                            Background="#3498DB"
                            Foreground="White"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#3498DB"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="0,4,4,0"
                                                    Padding="15,0">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#2980B9"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </StackPanel>

            <!-- Type de backup -->
            <StackPanel Grid.Row="4" Margin="0,0,0,20">
                <TextBlock Text="Type de sauvegarde" 
                           FontWeight="SemiBold" 
                           Foreground="#34495E"
                           Margin="0,0,0,8"/>
                <Border BorderBrush="#BDC3C7" 
                        BorderThickness="1" 
                        CornerRadius="4"
                        Background="White">
                    <ComboBox x:Name="cmbBackupType" 
                              BorderThickness="0"
                              Padding="10"
                              FontSize="14"
                              Height="40"
                              VerticalContentAlignment="Center">
                        <ComboBoxItem Content="🔵 Sauvegarde complète"/>
                        <ComboBoxItem Content="🔄 Sauvegarde différentielle"/>
                    </ComboBox>
                </Border>
            </StackPanel>

            <!-- Spacer -->
            <Grid Grid.Row="5"/>

            <!-- Boutons -->
            <Grid Grid.Row="6" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="1"
                        Content="💾 Enregistrer" 
                        Width="140" 
                        Height="45"
                        Margin="0,0,10,0"
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#E67E22"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="4">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#D35400"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Grid.Column="2"
                        Content="✕ Annuler" 
                        Width="130" 
                        Height="45"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="#7F8C8D"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#ECF0F1"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="4">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#BDC3C7"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>