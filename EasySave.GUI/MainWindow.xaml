<Window x:Class="EasySave.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:EasySave.VM.ViewModels;assembly=EasySave.VM"
        mc:Ignorable="d"
        Title="EasySave" Height="450" Width="800">

    <!-- DataContext lié au MainViewModel -->
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Barre d'outils avec sélecteur de langue -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <!-- Boutons avec texte bindé -->
            <Button Content="{Binding RefreshButtonText}" 
                    Command="{Binding RefreshCommand}" 
                    Margin="0,0,5,0" Padding="10,5"/>
            <Button Content="{Binding RunAllButtonText}" 
                    Command="{Binding RunAllCommand}" 
                    Margin="0,0,20,0" Padding="10,5"/>

            <!-- 🔥 SÉLECTEUR DE LANGUE - Exemple concret de binding -->
            <TextBlock Text="{Binding LanguageLabel}" 
                       VerticalAlignment="Center" 
                       Margin="0,0,5,0"/>
            <ComboBox ItemsSource="{Binding AvailableLanguages}"
                      SelectedItem="{Binding SelectedLanguage}"
                      DisplayMemberPath="DisplayName"
                      Width="120"/>
        </StackPanel>

        <!-- Liste des sauvegardes -->
        <ListBox Grid.Row="1" 
                 ItemsSource="{Binding Backups}" 
                 SelectedItem="{Binding SelectedBackup}"
                 HorizontalContentAlignment="Stretch">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="LightGray" BorderThickness="1" Padding="10" Margin="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Nom et Type -->
                            <TextBlock Grid.Row="0" Grid.Column="0" FontWeight="Bold" FontSize="14">
                                <Run Text="{Binding Name, Mode=OneWay}"/>
                                <Run Text=" - "/>
                                <Run Text="{Binding Type, Mode=OneWay}"/>
                            </TextBlock>

                            <!-- Bouton Exécuter -->
                            <Button Grid.Row="0" Grid.Column="1" 
                                    Content="▶ Exécuter" 
                                    Command="{Binding RunCommand}"
                                    Padding="10,3"/>

                            <!-- Chemins -->
                            <TextBlock Grid.Row="1" Grid.ColumnSpan="2" Foreground="Gray" FontSize="11">
                                <Run Text="Source: "/><Run Text="{Binding SourcePath, Mode=OneWay}"/>
                            </TextBlock>
                            <TextBlock Grid.Row="2" Grid.ColumnSpan="2" Foreground="Gray" FontSize="11">
                                <Run Text="Destination: "/><Run Text="{Binding DestinationPath, Mode=OneWay}"/>
                            </TextBlock>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Barre de statut -->
        <StatusBar Grid.Row="2" Margin="0,10,0,0">
            <StatusBarItem Content="{Binding StatusMessage}"/>
        </StatusBar>
    </Grid>
</Window>
